{
    "name": "esewa-pay",
    "version": "1.0.1",
    "description": "A TypeScript SDK for integrating eSewa payments (supports both ESM & CJS)",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "tsup src/index.ts --format esm,cjs --dts",
        "dev": "tsup src/index.ts --watch --format esm,cjs --dts",
        "prepare": "npm run build",
        "clean": "rm -rf dist"
    },
    "keywords": [
        "esewa",
        "payment",
        "sdk",
        "typescript",
        "hmac",
        "epay"
    ],
    "author": "Shishir Subedi <shishir16subedi@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/shishir-subedii/esewa-pay.git"
    },
    "bugs": {
        "url": "https://github.com/shishir-subedii/esewa-pay/issues"
    },
    "homepage": "https://github.com/shishir-subedii/esewa-pay#readme",
    "dependencies": {
        "axios": "^1.7.2"
    },
    "devDependencies": {
        "@types/node": "^24.7.2",
        "tsup": "^8.5.0",
        "typescript": "^5.9.3"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    }
}
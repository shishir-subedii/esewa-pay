{
    "name": "esewa-pay",
    "version": "1.0.4",
    "description": "A TypeScript SDK for integrating eSewa payments (supports both ESM & CJS)",
    "main": "./dist/cjs/index.js",
    "module": "./dist/esm/index.js",
    "types": "./dist/types/index.d.ts",
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "build:esm": "tsup src/index.ts --format esm --dts --out-dir dist/esm",
        "build:cjs": "tsup src/index.ts --format cjs --dts --out-dir dist/cjs",
        "build": "rimraf dist && npm run build:cjs && npm run build:esm",
        "dev:cjs": "tsup src/index.ts --watch --format cjs --dts --out-dir dist/cjs",
        "dev:esm": "tsup src/index.ts --watch --format esm --dts --out-dir dist/esm",
        "dev": "npm run dev:cjs & npm run dev:esm",
        "prepare": "npm run build",
        "clean": "rimraf dist"
    },
    "keywords": [
        "esewa",
        "payment",
        "sdk",
        "typescript",
        "hmac",
        "epay"
    ],
    "author": "Shishir Subedi <shishir16subedi@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/shishir-subedii/esewa-pay.git"
    },
    "homepage": "https://github.com/shishir-subedii/esewa-pay#readme",
    "dependencies": {
        "axios": "^1.7.2"
    },
    "devDependencies": {
        "@types/node": "^24.7.2",
        "tsup": "^8.5.0",
        "typescript": "^5.9.3",
        "rimraf": "^6.0.1"
    },
    "exports": {
        ".": {
            "import": "./dist/esm/index.mjs",
            "require": "./dist/cjs/index.js"
        }
    },
    "engines": {
        "node": ">=16"
    }
}